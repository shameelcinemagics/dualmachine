datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // Path to your SQLite database file
}

generator client {
  provider = "prisma-client-js"
}

model Planogram {
  id              String   @id
  vendingMachineId String
  slotNumber      Int
  productId       String?  // Make productId optional
  quantity        Int
  maxCapacity     Int
  productName     String?  // Make productName optional
  productPrice    Decimal
  imageUrl        String?
  category        String?
  calories        Float
  fat             Float
  carbs           Float
  protein         Float
  sodium          Float
  ingredients     String?
  healthRating    Int?
}

